# Database
# For local development, use this format:
DATABASE_URL=postgresql://postgres:password@localhost:5432/jobseeker_crm_development
# For production (Railway provides this automatically):
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Rails Environment
RAILS_ENV=development
# Options: development, test, production

# Rails Master Key (required for credentials)
# Generate with: EDITOR=nano rails credentials:edit
# The key will be in config/master.key (DO NOT commit this file)
RAILS_MASTER_KEY=your_master_key_here

# JWT Authentication
# Generate a secure secret with: rails secret
JWT_SECRET_KEY=your_secret_key_here

# Server Configuration
PORT=3000
RAILS_MAX_THREADS=5

# Logging
RAILS_LOG_LEVEL=info
# Options: debug, info, warn, error, fatal

# Optional: CORS Origins (currently hardcoded in config/initializers/cors.rb)
# If you want to make CORS configurable, uncomment and set this:
# ALLOWED_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# Optional: Puma Configuration
# WEB_CONCURRENCY=2
# SOLID_QUEUE_IN_PUMA=true
# PIDFILE=tmp/pids/server.pid
